package com.dakshpokar.c1;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class GanttChart {
	private JFrame frm;
	private ProcessList processList = new ProcessList();
	public GanttChart() {
		
	}
	public void getFrame(ProcessList p) {
		processList = p;
		frm = new JFrame();
		frm.getContentPane().setLayout(null);
		frm.setBounds(100, 100, 500, 500);
		JPanel p2 = new JPanel();

		Integer total_size = 0;
		/*
		for(Process process : processList.getProcesses()){
			total_size = Integer.getInteger(process.getExecTime().toString());
		}
		*/
		Integer width = 0;
		for(Process process : processList.getProcesses()){
			
			JPanel p1 = new JPanel();
			p1.setBounds(width,0,(int)Math.round(process.getExecTime() * 80),70);
			
		}
		total_size = 18;
		total_size = total_size * 25;
		p1.setBackground(Color.red);
		p1.setSize(Math.round((total_size/2)),70);
		p2.setBackground(Color.green);
		p2.setBounds(Math.round((total_size/2)),0,Math.round((total_size/2)),70);
		frm.getContentPane().add(p1);
		frm.getContentPane().add(p2);

		frm.setVisible(true);
		frm.show();
	}
}
